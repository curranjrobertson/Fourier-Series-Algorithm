% Curran Robertson
% Fourier Series Expansion
% 

clear all;clc; close all

x = @(t) cos(t) 
w = 0.5
a0 = (w/pi)*integral(x, 0, 2*pi/w)
xf = a0/2
N = 10
i = 1
while i < N
    
    a(i) = (w/pi)*integral(@(t) x(t).*cos(i*w*t), 0, 2*pi/w)
    b(i) = (w/pi)*integral(@(t) x(t).*sin(i*w*t), 0, 2*pi/w)
    xf = @(t) xf + a(i)*cos(i*w*t)+b(i)*sin(i*w*t)
    i = i+1;
    
end



fplot(xf)


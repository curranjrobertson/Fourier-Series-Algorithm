t = 0:0.01:2;
yf = a0/2;

for n = 1:N
    an = 2/((n^2)*(w^2))*(1-cos(n*w));
    bn = 2/((n^2)*(w^2))*(n*w-sin(n*w));
    yf = yf + an*cos(n*w*t) + bn*sin(n*w*t);
end

